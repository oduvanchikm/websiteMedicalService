@model IEnumerable<CourseWorkDataBase.Models.Appointment>

@{
    ViewData["Title"] = "Записи на прием";
}

<div class="container my-5">
    <div class="row mb-4">
        <div class="col">
            <h2 class="text-center text-primary">@ViewData["Title"]</h2>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            У вас пока нет записей на прием.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-dark">
                <tr>
                    <th scope="col"><i class="bi bi-calendar-event"></i> Дата и Время</th>
                    <th scope="col"><i class="bi bi-person"></i> Доктор</th>
                    <th scope="col"><i class="bi bi-list-check"></i> Статус</th>
                    <th scope="col"><i class="bi bi-tools"></i> Действия</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>@appointment.AppointmentSlot.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@($"{appointment.AppointmentSlot.Doctor.FirstName} {appointment.AppointmentSlot.Doctor.FamilyName}")</td>
                        <td>
                            @if (appointment.Status.Name.ToLower() == "запланировано")
                            {
                                <span class="badge bg-primary">@appointment.Status.Name</span>
                            }
                            else if (appointment.Status.Name.ToLower() == "завершено")
                            {
                                <span class="badge bg-success">@appointment.Status.Name</span>
                            }
                            else if (appointment.Status.Name.ToLower() == "отменено")
                            {
                                <span class="badge bg-danger">@appointment.Status.Name</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@appointment.Status.Name</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Details", "Appointments", new { id = appointment.Id })" class="btn btn-sm btn-info me-1" title="Подробнее">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a href="@Url.Action("Edit", "Appointments", new { id = appointment.Id })" class="btn btn-sm btn-warning me-1" title="Редактировать">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <form asp-action="Delete" asp-controller="Appointments" asp-route-id="@appointment.Id" method="post" class="d-inline" onsubmit="return confirm('Вы уверены, что хотите удалить эту запись на прием?');">
                                <button type="submit" class="btn btn-sm btn-danger" title="Удалить">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }

    <div class="row mt-4">
        <div class="col text-center">
            <a href="@Url.Action("PatientPage", "Patient")" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Записаться на новый прием
            </a>
        </div>
    </div>
</div>