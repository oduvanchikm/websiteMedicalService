@using CourseWorkDataBase.Models
@model BookAppointmentViewModel

@{
    ViewData["Title"] = "Детали Врача";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8"/>
    <title>@ViewData["Title"] - Медицинский Центр</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <a href="@Url.Action("PatientPage", "Patient")" class="btn btn-secondary mb-4">Назад к списку врачей</a>

    <div class="card mb-4">
        <div class="card-header">
            <h2>@Model.Doctor.FirstName</h2>
        </div>
        <div class="card-body">
            <p>
                <strong>Специализация:</strong> @Model.Doctor.Specialty.NameSpecialty
            </p>
        </div>
    </div>

    <h3>Доступные Временные Слоты</h3>
    @if (Model.AvailableSlots != null && Model.AvailableSlots.Any())
    {
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Дата и Время</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var slot in Model.AvailableSlots)
            {
                <tr>
                    <td>@slot.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        <form asp-action="BookAppointment" method="post" class="d-inline">
                            <input type="hidden" name="slotId" value="@slot.Id"/>
                            <button type="submit" class="btn btn-primary btn-sm"
                                    onclick="return confirm('Вы уверены, что хотите записаться на этот слот?');">
                                Записаться
                            </button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>Нет доступных слотов на данный момент.</p>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>