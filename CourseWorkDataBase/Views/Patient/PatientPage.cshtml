@using CourseWorkDataBase.Models
@model IEnumerable<Doctor>

@{
    ViewData["Title"] = "Список Врачей";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Medical Center</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h1 class="mb-4">Our Doctors</h1>

    <div class="text-center">
        <a href="@Url.Action("PatientAppointments", "Patient")" class="btn">My appointments</a>
    </div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Specialty</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var doctor in Model)
            {
                <tr>
                    <td>@doctor.FirstName</td>
                    <td>@doctor.FamilyName</td>
                    <td>@doctor.Specialty.NameSpecialty</td>
                    <td>
                        <a href="@Url.Action("ViewDoctor", "Patient", new { doctorId = doctor.ID })" class="btn btn-info btn-sm">View</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No doctors found.</td>
            </tr>
        }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>