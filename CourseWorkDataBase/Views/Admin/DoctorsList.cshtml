@model IEnumerable<CourseWorkDataBase.Models.Doctor>

@{
    ViewData["Title"] = "Список Врачей";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить Нового Врача</a>
</p>

<table class="table table-bordered table-hover">
    <thead class="thead-light">
    <tr>
        <th>Имя</th>
        <th>Специальность</th>
        <th>Номер Лицензии</th>
        <th>Контакт</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.FirstName</td>
                <td>@doctor.FamilyName</td>
                <td>@doctor.Specialty.NameSpecialty</td>
                <td>@doctor.User.PersonalNumber</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@doctor.ID" class="btn btn-sm btn-warning">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@doctor.ID" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="5" class="text-center">Нет доступных записей.</td>
        </tr>
    }
    </tbody>
</table>