@model CourseWorkDataBase.Models.AddDoctorRequest
@{
    ViewData["Title"] = "Добавить врача";
}

<h2>Добавить врача</h2>

<form asp-action="AddDoctor" method="post">
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FirstName">FirstName</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FamilyName">FamilyName</label>
        <input asp-for="FamilyName" class="form-control" />
        <span asp-validation-for="FamilyName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Doctor.SpecialtyId">Специальность</label>
        <select asp-for="Doctor.SpecialtyId" class="form-control" asp-items="Model.Specialties">
            <option value="">-- Выберите специальность --</option>
        </select>
        <span asp-validation-for="Doctor.SpecialtyId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClinicAddress">ClinicAddress</label>
        <input asp-for="ClinicAddress" class="form-control" />
        <span asp-validation-for="ClinicAddress" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClinicPhoneNumber">ClinicPhoneNumber</label>
        <input asp-for="ClinicPhoneNumber" class="form-control" />
        <span asp-validation-for="ClinicPhoneNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Добавить врача</button>
</form>