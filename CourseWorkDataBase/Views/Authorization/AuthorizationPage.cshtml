@{
    ViewData["Title"] = "Authorization";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Authorization</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: url('https://milkeninstitute.org/sites/default/files/Batchlor-Elaine-hero_image-min.jpg') no-repeat center center fixed;
            background-size: cover;
            position: relative;
        }

        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
            background-color: rgba(0, 0, 0, 0.5); 
        }

        form {
            position: relative;
            z-index: 2;
            background-color: rgba(255, 255, 255, 0.9);
            padding: 40px 50px; 
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 600px; 
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        form:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.3);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #8b5fa3;
            font-size: 28px;
            position: relative;
        }

        h2::after {
            content: '';
            display: block;
            width: 50px;
            height: 3px;
            background-color: #8b5fa3;
            margin: 8px auto 0;
            border-radius: 2px;
        }

        input[type="email"],
        input[type="password"] {
            width: 100%;
            padding: 12px 15px;
            margin-top: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 16px;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

        input:focus {
            border-color: #8b5fa3;
            outline: none;
            box-shadow: 0 0 5px rgba(111, 66, 193, 0.5);
        }

        button {
            width: 100%;
            padding: 12px;
            background-color: #8b5fa3;
            color: #fff;
            border: none;
            border-radius: 6px;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s, box-shadow 0.3s;
        }

        button:hover {
            background-color: #8b5fa3;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(89, 57, 161, 0.3);
        }

        ::placeholder {
            color: #999;
        }

        .additional-options {
            text-align: center;
            margin-top: 20px;
            color: #fff;
            z-index: 2;
            position: relative;
        }

        a.btn {
            display: inline-block;
            margin-top: 10px;
            padding: 10px 15px;
            background-color: #8b5fa3;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        a.btn:hover {
            background-color: #7c4b96;
        }

        .error-message {
            display: none;
            color: #721c24;
            background: linear-gradient(90deg, #f8d7da, #fbeeed);
            border: 1px solid #f5c6cb;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            padding: 15px 20px;
            margin-top: 20px;
            font-size: 16px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 10px;
            animation: fadeIn 0.4s ease-in;
        }
        
    </style>
</head>
<body>

<div class="form-container">
    @if (TempData["ErrorMessage"] != null)
    {
    <div class="error-message" id="error-message">
        @TempData["ErrorMessage"]
    </div>
    }

    <div class="error-message" id="error-message" style="display: none; color: red; border: 1px solid red; padding: 10px; margin-top: 10px;"></div>

    <form id="user-form" action="@Url.Action("AuthorizationPage", "Authorization")" method="POST" class="form active">
        <h2>User login</h2>
        <input type="email" id="user-email" name="Email" placeholder="Email" required>
        <input type="password" id="user-password" name="Password" placeholder="Password" required>
        <button type="submit">Login</button>
        <span>Don't have an account?</span>
        <div class="text-center">
            <a href="@Url.Action("RegisterPage", "Register")" class="btn">Register</a>
        </div>
    </form>
</div>
</body>
</html>