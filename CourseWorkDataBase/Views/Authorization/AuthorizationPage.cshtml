@{
ViewData["Title"] = "Authorization";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Authorization</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: url('https://amcmedlife.ru/wp-content/uploads/revslider/demo-medical/slide-medical-2.jpg') no-repeat center center fixed;
            background-size: cover;
            position: relative;
        }

        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
        }

        .form-container {
            position: relative;
            z-index: 2;
            background-color: rgba(255, 255, 255, 0.9);
            padding: 30px 40px;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 500px;
        }

        .tabs {
            display: flex;
            margin-bottom: 20px;
            border-bottom: 2px solid #ddd;
        }

        .tab {
            flex: 1;
            text-align: center;
            padding: 10px 0;
            cursor: pointer;
            font-size: 18px;
            color: #6f42c1;
            border-bottom: 2px solid transparent;
            transition: border-bottom 0.3s, color 0.3s;
        }

        .tab.active {
            border-bottom: 2px solid #6f42c1;
            color: #5939a1;
            font-weight: bold;
        }

        .form {
            display: none;
        }

        .form.active {
            display: block;
        }

        input, button {
            width: 100%;
            padding: 12px 15px;
            margin-top: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 16px;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

        input:focus {
            border-color: #6f42c1;
            outline: none;
            box-shadow: 0 0 5px rgba(111, 66, 193, 0.5);
        }

        select {
            appearance: none;
            background: url('data:image/svg+xml;charset=US-ASCII,<svg xmlns="http://www.w3.org/2000/svg" width="10" height="5" viewBox="0 0 10 5"><path fill="%236f42c1" d="M0 0l5 5 5-5z"/></svg>') no-repeat right 15px center;
            background-size: 10px 5px;
        }

        button {
            background-color: #6f42c1;
            color: #fff;
            border: none;
            border-radius: 6px;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s, box-shadow 0.3s;
        }

        button:hover {
            background-color: #5939a1;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(89, 57, 161, 0.3);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #6f42c1;
            font-size: 24px;
            position: relative;
        }

        h2::after {
            content: '';
            display: block;
            width: 50px;
            height: 3px;
            background-color: #6f42c1;
            margin: 8px auto 0;
            border-radius: 2px;
        }

        ::placeholder {
            color: #999;
        }
    </style>
</head>
<body>
<div class="form-container">
    <div class="tabs">
        <div class="tab active" id="user-tab">User</div>
        <div class="tab" id="doctor-tab">Врач</div>
    </div>

    <div class="error-message" id="error-message" style="display: none; color: red; border: 1px solid red; padding: 10px; margin-top: 10px;"></div>

    <form id="user-form" action="@Url.Action("AuthorizationPage", "Authorization")" method="POST" class="form active">
        <h2>User login</h2>
        <input type="email" id="user-email" name="Email" placeholder="Email" required>
        <input type="password" id="user-password" name="Password" placeholder="Password" required>
        <button type="submit">Login</button>
    </form>

    <form id="doctor-form" action="@Url.Action("LoginDoctor", "Authorization")" method="POST" class="form">
        <h2>Doctor login</h2>
        <input type="text" id="doctor-email" name="Email" placeholder="Email" required>
        <input type="text" id="doctor-personal-number" name="PersonalNumber" placeholder="Personal Number" required>
        <button type="submit">Login</button>
    </form>

    <div class="additional-options">
        <span>Don't have an account?</span>
        <div class="text-center">
            <a href="@Url.Action("RegisterPage", "Register")" class="btn">Register</a>
        </div>
        @* <a href="@Url.Action("RegisterPage", "Register")">Register</a> *@
    </div>
</div>

<script>
    const userTab = document.getElementById('user-tab');
    const doctorTab = document.getElementById('doctor-tab');
    const userForm = document.getElementById('user-form');
    const doctorForm = document.getElementById('doctor-form');
    const errorMessage = document.getElementById('error-message');

    const errorMsg = '@TempData["ErrorMessage"]';
    if (errorMsg) {
        errorMessage.textContent = errorMsg;
        errorMessage.style.display = 'block';
    }

    userTab.addEventListener('click', () => {
        userTab.classList.add('active');
        doctorTab.classList.remove('active');
        userForm.classList.add('active');
        doctorForm.classList.remove('active');
    });

    doctorTab.addEventListener('click', () => {
        doctorTab.classList.add('active');
        userTab.classList.remove('active');
        doctorForm.classList.add('active');
        userForm.classList.remove('active');
    });
</script>

</body>
</html>