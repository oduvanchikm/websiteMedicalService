@model CourseWorkDataBase.ViewModels.MedicalHistoryViewModel

@{
    ViewData["Title"] = "Medical History";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <title>@ViewData["Title"] - Medical Center</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .header {
            margin-bottom: 30px;
        }
        .btn-pdf {
            background-color: #dc3545;
            border-color: #dc3545;
            color: #fff;
        }
        .btn-pdf:hover {
            background-color: #c82333;
            border-color: #bd2130;
            color: #fff;
        }
        .card {
            margin-bottom: 20px;
        }
        .card-header {
            background-color: #0d6efd;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="header text-center">
            <h1 class="mb-2">Medical History</h1>
            <p class="text-muted">@Model.PatientName @Model.PatientSurname</p>
        </div>

        <div class="d-flex justify-content-end mb-4">
            <a asp-action="SaveAsPdf" asp-route-id="@Model.PatientId" class="btn btn-pdf me-2">
                <i class="fas fa-file-pdf me-1"></i> Save as PDF
            </a>
            <a asp-action="DoctorPage" asp-controller="Doctor" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to Doctor's Page
            </a>
        </div>

        @if (Model.MedicalRecords != null && Model.MedicalRecords.Any())
        {
            <div class="row">
                @foreach (var record in Model.MedicalRecords)
                {
                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-header">
                                <strong>Diagnosis:</strong> @record.Diagnosis
                            </div>
                            <div class="card-body">
                                <p class="mb-2"><strong>Description:</strong> @record.Description</p>
                                <hr />
                                <p class="mb-1"><strong>Medication Name:</strong> @record.NameMedication</p>
                                <p class="mb-0"><strong>Medication Description:</strong> @record.DescriptionMedication</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center" role="alert">
                No medical records found for this patient.
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
</body>
</html>