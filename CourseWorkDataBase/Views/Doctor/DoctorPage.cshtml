@using CourseWorkDataBase.Models
@model IEnumerable<AppointmentSlot>

@{
    ViewData["Title"] = "Doctor's Personal Office";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <title>@ViewData["Title"] - Medical Center</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h1 class="mb-4">Patients</h1>

    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-pills nav-pills-custom flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link active" asp-action="DoctorDashboard">Manage Slots</a>
                </li>
            </ul>
        </div>
        <div class="col-md-9">
            <table class="table">
                <thead>
                <tr>
                    <th>Time</th>
                    <th>Patient</th>
                    <th>Action</th>
                    <th>Information</th>
                </tr>
                </thead>
                <tbody>
                @if (Model != null)
                {
                    @foreach (var appointment in Model)
                    {
                        if (appointment?.Appointment?.Patient != null)
                        {
                            <tr>
                                <td>@appointment.StartTime.ToString("g")</td>
                                <td>@appointment.Appointment.Patient.FirstName @appointment.Appointment.Patient.FamilyName</td>
                                <td>
                                    <a href=@Url.Action("AddMedicalRecords", "Doctor", new {id = appointment.Appointment.Id})>Personal list</a>
                                </td>
                                <td>
                                    <a href=@Url.Action("ShowMedicalRecords", "Doctor", new {id = appointment.Appointment.PatientId})>Information</a>
                                </td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td colspan="3">Information not found</td>
                            </tr>
                        }
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">Doctors have not been found.</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>