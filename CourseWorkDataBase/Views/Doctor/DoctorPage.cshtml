@using CourseWorkDataBase.Models
@model IEnumerable<AppointmentSlot>

@{
    ViewData["Title"] = "Личный кабинет врача";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8"/>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f0fc;
            color: #4b0082;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            padding: 20px;
        }

        .container-custom {
            max-width: 1200px;
            margin: 50px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        }

        .page-title {
            font-size: 2.5rem;
            color: #4b0082;
            margin-bottom: 30px;
            text-align: center;
        }

        /* Вертикальная навигация */
        .nav-pills-custom {
            flex-direction: column;
            background-color: #e0f7fa; /* Бледно-голубой фон */
            border-radius: 10px;
            padding: 10px;
        }

        .nav-pills-custom .nav-link {
            color: #004d40; /* Темно-зеленый текст */
            margin-bottom: 5px;
            border-radius: 5px;
            background-color: #b2ebf2; /* Еще бледнее голубое */
            transition: background-color 0.3s, color 0.3s;
        }

        .nav-pills-custom .nav-link.active {
            background-color: #4dd0e1;
            color: white;
        }

        .nav-pills-custom .nav-link:hover {
            background-color: #81d4fa;
            color: white;
        }

        .doctor-info {
            text-align: center;
            margin-top: 30px;
        }

        .doctor-info img {
            border-radius: 10px;
            border: 5px solid #4dd0e1;
            max-width: 100%;
            height: auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        blockquote {
            font-size: 1rem;
            color: #6a0dad;
            margin-top: 20px;
            padding: 10px;
            border-left: 5px solid #4dd0e1;
            background-color: #e0f7fa;
            border-radius: 5px;
        }

        blockquote footer {
            color: #4dd0e1;
            margin-top: 10px;
            display: block;
            text-align: right;
            font-size: 0.8rem;
        }

        .slots-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 30px;
        }

        .slots-table th, .slots-table td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: center;
            font-size: 0.9rem;
        }

        .slots-table th {
            background-color: #4dd0e1;
            color: white;
        }

        .slots-table tr:nth-child(even) {
            background-color: #e0f7fa;
        }

        .slots-table tr:hover {
            background-color: #b2ebf2;
        }

        .btn-custom {
            background-color: #4dd0e1;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 5px;
            transition: background-color 0.3s;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            margin: 2px;
        }

        .btn-custom:hover {
            background-color: #00acc1;
        }

        .btn-delete {
            background-color: #ff4d4d;
        }

        .btn-delete:hover {
            background-color: #e60000;
        }
    </style>
</head>
<body>
<div class="container-custom">
    <div class="page-title">
        <b>Личный кабинет врача</b>
    </div>

    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-pills nav-pills-custom">
                <li class="nav-item mb-2">
                    <a class="nav-link active" asp-action="DoctorDashboard">Управление слотами</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" asp-action="ViewPatients">Посмотреть пациентов</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" asp-action="Settings">Настройки</a>
                </li>
            </ul>
        </div>

        <div class="col-md-9">
            <div class="doctor-info">
            </div>

            <table class="slots-table">
                @if (Model != null && Model.Any())
                {
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>Дата и время начала</th>
                            <th>Дата и время окончания</th>
                            <th>Статус</th>
                            <th>Действия</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var slot in Model)
                        {
                            <tr>
                                <td>@slot.StartTime.ToLocalTime().ToString("g")</td>
                                <td>@slot.EndTime.ToLocalTime().ToString("g")</td>
                                <td>@(slot.IsBooked ? "Занято" : "Свободно")</td>
                                <td>
                                    @if (!slot.IsBooked)
                                    {
                                        <form asp-action="DeleteSlot" method="post" style="display:inline;">
                                            <input type="hidden" name="id" value="@slot.Id"/>
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Вы уверены, что хотите удалить этот слот?');">Удалить</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Недоступно</span>
                                    }
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>Нет доступных слотов для отображения.</p>
                }
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>