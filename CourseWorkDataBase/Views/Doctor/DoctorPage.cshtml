@{
ViewData["Title"] = "Вход";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8"/>
    <title>@ViewData["Title"] - ToDo List</title>
    <link rel="stylesheet" href="~/css/index.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(
                rgba(0, 0, 0, 0.5),
                rgba(0, 0, 0, 0.5)
            ), url('https://amcmedlife.ru/wp-content/uploads/revslider/demo-medical/slide-medical-2.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #fff;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Контейнер страницы входа */
        .login-container {
            background-color: rgba(255, 255, 255, 0.95);
            padding: 50px 40px;
            border-radius: 12px;
            box-shadow: 0 8px 40px rgba(0, 0, 0, 0.2);
            max-width: 500px;
            width: 100%;
            text-align: center;
            animation: fadeIn 1s ease-in-out;
        }

        .login-container h2 {
            color: #6f42c1;
            margin-bottom: 25px;
            font-size: 32px;
            position: relative;
            display: inline-block;
            padding-bottom: 10px;
        }

        .login-container h2::after {
            content: '';
            width: 50px;
            height: 3px;
            background-color: #6f42c1;
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            border-radius: 2px;
        }

        /* Форма */
        form {
            margin-top: 20px;
        }

        form .form-group {
            position: relative;
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #333;
        }

        input {
            width: 100%;
            padding: 12px 40px 12px 15px;
            border: 1px solid #ddd;
            border-radius: 6px;
            transition: border-color 0.3s;
            font-size: 16px;
        }

        input:focus {
            border-color: #6f42c1;
            outline: none;
        }

        .form-group .fa {
            position: absolute;
            top: 38px;
            right: 15px;
            color: #6f42c1;
            pointer-events: none;
        }

        /* Кнопка входа */
        button {
            width: 100%;
            padding: 12px;
            background-color: #6f42c1;
            border: none;
            color: white;
            font-size: 18px;
            border-radius: 6px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        button:hover {
            background-color: #593f9d;
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(89, 63, 157, 0.3);
        }

        /* Социальные кнопки */
        .social-login {
            margin-top: 30px;
        }

        .social-login p {
            margin-bottom: 10px;
            font-size: 16px;
            color: #333;
        }

        .social-buttons {
            display: flex;
            justify-content: center;
            gap: 15px;
        }

        .social-btn {
            background-color: #4267B2; /* Facebook */
            color: #fff;
            border: none;
            padding: 10px 15px;
            border-radius: 50%;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .social-btn.google {
            background-color: #DB4437;
        }

        .social-btn.twitter {
            background-color: #1DA1F2;
        }

        .social-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .additional-options {
            margin-top: 25px;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .additional-options a {
            color: #6f42c1;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s;
            margin-top: 10px;
        }

        .additional-options a:hover {
            color: #593f9d;
        }

        .error-message {
            color: red;
            margin-bottom: 10px;
            font-size: 14px;
        }
    </style>
</head>
<body>

<div class="login-container">
    <h2><i class="fas fa-sign-in-alt"></i> HELLO DOCTOR</h2>
</div>

</body>
</html>