@{
ViewData["Title"] = "Добро пожаловать";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8"/>
    <title>@ViewData["Title"] - Medical platform</title>
    <link rel="stylesheet" href="~/css/index.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(
                rgba(0, 0, 0, 0.5),
                rgba(0, 0, 0, 0.5)
            ), url('https://i.pinimg.com/originals/c9/12/d4/c912d4d3baf5debaf25574ad2d04b5b5.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #fff;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .welcome-container {
            background-color: rgba(255, 255, 255, 0.95);
            padding: 50px 40px;
            border-radius: 12px;
            box-shadow: 0 8px 40px rgba(0, 0, 0, 0.2);
            max-width: 500px;
            width: 100%;
            text-align: center;
            animation: fadeIn 1s ease-in-out;
        }

        .welcome-container h1 {
            color: #6f42c1;
            margin-bottom: 25px;
            font-size: 32px;
            position: relative;
            display: inline-block;
            padding-bottom: 10px;
        }

        .welcome-container h1::after {
            content: '';
            width: 50px;
            height: 3px;
            background-color: #6f42c1;
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            border-radius: 2px;
        }

        .welcome-container p {
            margin-bottom: 35px;
            font-size: 18px;
            color: #555;
        }

        .button-group {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .btn {
            padding: 15px 25px;
            border: none;
            border-radius: 6px;
            color: white;
            text-decoration: none;
            font-size: 16px;
            transition: background-color 0.3s, transform 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            min-width: 160px;
        }

        .btn-primary {
            background-color: #6f42c1;
        }

        .btn-secondary {
            background-color: #5a6268;
        }

        .btn-primary:hover {
            background-color: #593f9d;
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(89, 63, 157, 0.3);
        }

        .btn-secondary:hover {
            background-color: #545b62;
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(84, 91, 98, 0.3);
        }

        .icon {
            margin-right: 8px;
        }

        .additional-options a {
            color: #6f42c1;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s;
            margin-top: 10px;
        }

        .additional-options a:hover {
            color: #593f9d;
        }

        .social-login p {
            margin-bottom: 10px;
            font-size: 16px;
            color: #333;
        }
    </style>
</head>
<body>

<div class="welcome-container">
    <h1><i class="fas fa-user-md"></i> Welcome to the site!</h1>
    <p>Please choose an action</p>
    <div class="button-group">
        <a class="btn btn-primary" href="@Url.Action("RegisterPage", "Register")">
            <i class="fas fa-user-plus icon"></i> Register
        </a>
        <a class="btn btn-secondary" href="@Url.Action("AuthorizationPage", "Authorization")">
            <i class="fas fa-sign-in-alt icon"></i> Login
        </a>
        @* <a class="btn btn-secondary" href="@Url.Action("InformationDoctors", "Information")"> *@
        @*     <i class="fas fa-sign-in-alt icon"></i> View Information About Doctors *@
        @* </a> *@
    </div>
</div>

</body>
</html>