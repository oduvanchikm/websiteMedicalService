@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8"/>
    <title>@ViewData["Title"] - Медицинская платформа</title>
    <link rel="stylesheet" href="~/css/index.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        /* Общие стили */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(
                rgba(0, 0, 0, 0.5),
                rgba(0, 0, 0, 0.5)
            ), url('https://amcmedlife.ru/wp-content/uploads/revslider/demo-medical/slide-medical-2.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #fff;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Контейнер формы */
        .welcome-container {
            background-color: rgba(255, 255, 255, 0.95);
            padding: 40px 30px;
            border-radius: 12px;
            box-shadow: 0 8px 40px rgba(0, 0, 0, 0.2);
            max-width: 500px;
            width: 100%;
            text-align: center;
            animation: fadeIn 1s ease-in-out;
        }

        /* Анимация появления */


        /* Заголовок */
        .welcome-container h2 {
            color: #6f42c1;
            margin-bottom: 25px;
            font-size: 32px;
            position: relative;
            padding-bottom: 10px;
            display: inline-block;
        }

        .welcome-container h2::after {
            content: '';
            width: 50px;
            height: 3px;
            background-color: #6f42c1;
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            border-radius: 2px;
        }

        /* Поля формы */
        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: 500;
        }

        .form-group input {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 16px;
            transition: border-color 0.3s;
        }

        .form-group input:focus {
            border-color: #6f42c1;
            outline: none;
            box-shadow: 0 0 5px rgba(111, 66, 193, 0.5);
        }

        /* Кнопка регистрации */
        .btn-primary {
            background-color: #6f42c1;
            color: #fff;
            border: none;
            padding: 15px 25px;
            border-radius: 6px;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn-primary:hover {
            background-color: #593f9d;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(89, 63, 157, 0.3);
        }

        /* Ссылки и вспомогательные элементы */
        .additional-options {
            margin-top: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .additional-options a {
            color: #6f42c1;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s;
        }


        .additional-options a:hover {
            color: #593f9d;
        }

        /* Социальные кнопки регистрации */
        .social-btn {
            background-color: #4267B2; /* Цвет Facebook */
            color: #fff;
            border: none;
            padding: 10px 15px;
            border-radius: 50%;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
            margin: 0 5px;
        }

        .social-btn.google {
            background-color: #DB4437;
        }

        .social-btn.twitter {
            background-color: #1DA1F2;
        }

        .social-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .welcome-container h2 {
            font-size: 28px;
        }

        .btn-primary {
            font-size: 16px;
            padding: 12px 20px;
        }
    </style>
</head>
<body>

<div class="welcome-container">
    <h2>Регистрация</h2>
    <form action="/register" method="POST">
        <div class="form-group">
            <label for="username">Имя пользователя</label>
            <input type="text" id="username" name="username" placeholder="Введите ваше имя" required>
        </div>
        <div class="form-group">
            <label for="familyname">Фамилия пользователя</label>
            <input type="text" id="familyname" name="familyname" placeholder="Введите вашу фамилию" required>
        </div>
        <div class="form-group">
            <label for="email">Электронная почта</label>
            <input type="email" id="email" name="email" placeholder="example@domain.com" required>
        </div>
        <div class="form-group">
            <label for="password">Придумайте пароль</label>
            <input type="password" id="password" name="password" placeholder="Создайте пароль" required>
        </div>
        <div class="form-group">
            <label for="confirm_password">Пожалуйста, повторите пароль</label>
            <input type="password" id="confirm_password" name="confirm_password" placeholder="Повторите пароль" required>
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-user-plus icon"></i> Зарегистрироваться
        </button>
    </form>
    <div class="additional-options">
        <span>Уже есть аккаунт?</span>
        <a href="/login">Войти</a>
    </div>
    <div class="social-login" style="margin-top: 20px;">
        <p>Или зарегистрируйтесь с помощью:</p>
        <div style="display: flex; justify-content: center; margin-top: 10px;">
            <button class="social-btn google"><i class="fab fa-google"></i></button>
            <button class="social-btn facebook"><i class="fab fa-facebook-f"></i></button>
            <button class="social-btn twitter"><i class="fab fa-twitter"></i></button>
        </div>
    </div>
</div>

<script>
    document.getElementById('registerForm').addEventListener('submit', async function(event) {
        event.preventDefault();

        const data = {
            username: document.getElementById('username').value,
            familyname: document.getElementById('familyname').value, 
            email: document.getElementById('email').value,
            password: document.getElementById('password').value,
            role: { Name: "Patient" }
        };

        const response = await fetch('/api/AuthorizationApi/register', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        });

        if (response.ok) {
            alert('Регистрация прошла успешно');
        } else {
            const error = await response.text();
            alert('Ошибка: ' + error);
        }
    });
</script>

</body>
</html>